<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>web-parent</artifactId>
        <groupId>com.iwhalecloud.retail</groupId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>
    <artifactId>retail-web-boot</artifactId>

    <dependencies>

        <dependency>
            <groupId>com.iwhalecloud.retail</groupId>
            <artifactId>retail-web</artifactId>
            <version>${web.version}</version>
        </dependency>

        <dependency>
            <groupId>com.github.tobato</groupId>
            <artifactId>fastdfs-client</artifactId>
            <version>1.25.4-RELEASE</version>
        </dependency>
        <dependency>
            <groupId>com.github.tobato</groupId>
            <artifactId>fastdfs-client</artifactId>
            <version>1.25.4-RELEASE</version>
            <scope>compile</scope>
        </dependency>

    </dependencies>

	<build>
		<finalName>retail-web</finalName>
		
		<plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <fork>true</fork>
                    <layout>ZIP</layout>
                    <includes>
                        <include>
                            <groupId>com.iwhalecloud.retail</groupId>
                            <artifactId>retail-web</artifactId>
                        </include>
                        <include>
                            <groupId>com.iwhalecloud.retail</groupId>
                            <artifactId>domain-object</artifactId>
                        </include>
                        <include>
                            <groupId>com.iwhalecloud.retail</groupId>
                            <artifactId>report-client</artifactId>
                        </include>
                        <include>
                            <groupId>com.iwhalecloud.retail</groupId>
                            <artifactId>partner-client</artifactId>
                        </include>
                        <include>
                            <groupId>com.iwhalecloud.retail</groupId>
                            <artifactId>order2b-client</artifactId>
                        </include>
                        <include>
                            <groupId>com.iwhalecloud.retail</groupId>
                            <artifactId>rights-client</artifactId>
                        </include>
                        <include>
                            <groupId>com.iwhalecloud.retail</groupId>
                            <artifactId>system-client</artifactId>
                        </include>
                        <include>
                            <groupId>com.iwhalecloud.retail</groupId>
                            <artifactId>member-client</artifactId>
                        </include>
                        <include>
                            <groupId>com.iwhalecloud.retail</groupId>
                            <artifactId>warehouse-client</artifactId>
                        </include>
                        <include>
                            <groupId>com.iwhalecloud.retail</groupId>
                            <artifactId>workflow-client</artifactId>
                        </include>
                        <include>
                        <groupId>com.iwhalecloud.retail</groupId>
                        <artifactId>goods2b-client</artifactId>
                    </include>
                        <include>
                            <groupId>com.iwhalecloud.retail</groupId>
                            <artifactId>promo-client</artifactId>
                        </include>
                        <include>
                            <groupId>com.iwhalecloud.retail</groupId>
                            <artifactId>zop-sdk</artifactId>
                        </include>
                    </includes>
                </configuration>
            </plugin>
		</plugins>
	</build>
</project>